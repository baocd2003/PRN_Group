@page
@model ICQS_Management.Pages.Admin_View.CreateModel

<h1 class="title">User Management</h1>
<div style="width: 90%; margin: 0 auto">
    <h2 class="text-center" style="margin-bottom: 3vh">Add User</h2>
    <form method="post">
        <div class="add_box">
            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="User.Name" class="control-label"><span style="color: rgb(53, 84, 209); font-weight: bold">* </span>User Name</label>
                    <input asp-for="User.Name" class="form-control" required/>
                    <span asp-validation-for="User.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label"><span style="color: rgb(53, 84, 209); font-weight: bold">* </span>Role</label>
                    <select asp-for="role" class="form-control">
                        <option value="Staff">Staff</option>
                        <option value="Customer">Customer</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="User.Email" class="control-label"><span style="color: rgb(53, 84, 209); font-weight: bold">* </span>Email Address</label>
                    <input asp-for="User.Email" class="form-control" required />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label asp-for="User.Password" class="control-label"><span style="color: rgb(53, 84, 209); font-weight: bold">* </span>Password</label>
                    <input type="password" asp-for="User.Password" class="form-control" required />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.PhoneNumber" class="control-label">Phone Number</label>
                    <input asp-for="User.PhoneNumber" class="form-control" />
                    <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group text-center mt-3">
            <input type="submit" value="Add" class="btn btn-primary mr-3" style="background-color: rgb(53, 84, 209) !important;" />
            <a asp-page="Index" class="btn btn-primary">Back to List</a>
        </div>
    </form>
 @if (@TempData["createError"] is not null)
{
    <span class="text-danger">@TempData["createError"]</span>
}
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
