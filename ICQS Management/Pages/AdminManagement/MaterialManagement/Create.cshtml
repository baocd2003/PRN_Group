@page
@model ICQS_Management.Pages.AdminManagement.MaterialManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="title">Material Management</h1>
<div style="width: 90%; margin: 0 auto">
    <h2 class="text-center" style="margin-bottom: 3vh">Add Material</h2>
    <div>
        @{
            if (Model.message != string.Empty)
            {
                <div id="notification" class="notification"></div>
                <script>
                    var notification = document.getElementById("notification");
                    notification.innerText = "@Model.message";
                    notification.classList.add("show");

                    setTimeout(function () {
                        notification.classList.remove("show");
                    }, 2000);
                </script>
            }
        }
        <form method="post">
            <div class="add_box">
                <div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="Edit_Info">
                        <label asp-for="MaterialDTO.Name" class="control-label" style="width: 300px !important"><span style="color: rgb(53, 84, 209); font-weight: bold">* </span>Material Name</label>
                        <input asp-for="MaterialDTO.Name" class="form-control" required/>
                        <span asp-validation-for="MaterialDTO.Name" class="text-danger"></span>
                    </div>
                    <div class="Edit_Info">
                        <label asp-for="MaterialDTO.MediumPrice" class="control-label" style="width: 300px !important"><span style="color: rgb(53, 84, 209); font-weight: bold">* </span>Medium Price</label>
                        <input asp-for="MaterialDTO.MediumPrice" type="number" class="form-control" min="1" required />
                        <span asp-validation-for="MaterialDTO.MediumPrice" class="text-danger"></span>
                    </div>
                    <div class="Edit_Info">
                        <label asp-for="MaterialDTO.MaterialTypeName" class="control-label" style="width: 300px !important"><span style="color: rgb(53, 84, 209); font-weight: bold">* </span>Material Type Name</label>
                        <select asp-for="MaterialDTO.MaterialTypeId" class="form-control" asp-items="ViewBag.MaterialTypeId"></select>
                        <span asp-validation-for="MaterialDTO.MaterialTypeId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group text-center mt-3">
                <input type="submit" value="Add" class="btn btn-primary mr-3" style="background-color: rgb(53, 84, 209) !important;" />
                <a asp-page="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
