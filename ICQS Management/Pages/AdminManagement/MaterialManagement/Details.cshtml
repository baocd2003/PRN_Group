@page
@model ICQS_Management.Pages.AdminManagement.MaterialManagement.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="title">Material Management</h1>
<div style="width: 90%; margin: 0 auto">
    <h2 class="text-center" style="margin-bottom: 7vh">Material Detail</h2>
    <div>
        <dl>
            <div class="add_box">
                <div>
                    <div class="info">
                        <dt>
                            @Html.DisplayNameFor(model => model.MaterialDTO.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.MaterialDTO.Name)
                        </dd>
                    </div>
                    <div class="info">
                        <dt>
                            @Html.DisplayNameFor(model => model.MaterialDTO.MediumPrice)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.MaterialDTO.MediumPrice)
                        </dd>
                    </div>
                    <div class="info">
                        <dt>
                            @Html.DisplayNameFor(model => model.MaterialDTO.MaterialTypeName)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.MaterialDTO.MaterialTypeName)
                        </dd>
                    </div>
                    <div class="info">
                        <dt>
                            @Html.DisplayNameFor(model => model.MaterialDTO.UnitType)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.MaterialDTO.UnitType)
                        </dd>
                    </div>
                </div>
            </div>
        </dl>
        <div style="display: flex; justify-content: center">
            <a asp-page="./Edit" asp-route-id="@Model.MaterialDTO.MaterialId" class="btn btn-primary mr-3">Edit</a>
            <a asp-page="./Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>
