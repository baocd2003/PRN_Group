@page
@model ICQS_Management.Pages.AdminManagement.MaterialManagement.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Material</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @{
            if (Model.message != string.Empty)
            {
                <div class="alert alert-primary" role="alert">
                    @Model.message
                </div>
            }
        }
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaterialDTO.MaterialId" />
            <div class="form-group">
                <label asp-for="MaterialDTO.Name" class="control-label"></label>
                <input asp-for="MaterialDTO.Name" class="form-control" />
                <span asp-validation-for="MaterialDTO.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaterialDTO.MediumPrice" class="control-label"></label>
                <input asp-for="MaterialDTO.MediumPrice" type="number" class="form-control" min="1" required/>
                <span asp-validation-for="MaterialDTO.MediumPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaterialDTO.MaterialTypeName" class="control-label"></label>
                <select asp-for="MaterialDTO.MaterialTypeId" class="form-control" asp-items="ViewBag.MaterialTypeId"></select>
                <span asp-validation-for="MaterialDTO.MaterialTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
