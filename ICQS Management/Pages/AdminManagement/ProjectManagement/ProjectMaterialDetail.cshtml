@page
@model ICQS_Management.Pages.ProjectManagement.ProjectMaterialDetailModel

@{
    ViewData["Title"] = "ProjectMaterialDetail";
}

<h1>ProjectMaterialDetail</h1>

<div>
    <h4>Project</h4>
    <hr />
    @{
        if (Model.message != string.Empty)
        {
            <div class="alert alert-primary" role="alert">
                @Model.message
            </div>
        }
    }
    <div class="row">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectMaterialList.ProjectMaterialId" />
            <input type="hidden" asp-for="ProjectMaterialList.ProjectId" />
            <div class="form-group">
                <label asp-for="ProjectMaterialList.MaterialId" class="control-label"></label>
                <select asp-for="ProjectMaterialList.MaterialId" class="form-control" asp-items="ViewBag.MaterialId"></select>
                <span asp-validation-for="ProjectMaterialList.MaterialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectMaterialList.Quantity" class="control-label"></label>
                <input asp-for="ProjectMaterialList.Quantity" class="form-control" min="1" required/>
                <span asp-validation-for="ProjectMaterialList.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectMaterialList.MediumPrice" class="control-label"></label>
                <input asp-for="ProjectMaterialList.MediumPrice" class="form-control" readonly />
                <span asp-validation-for="ProjectMaterialList.MediumPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectMaterialList.UnitType" class="control-label"></label>
                <input asp-for="ProjectMaterialList.UnitType" class="form-control" min="1" readonly />
                <span asp-validation-for="ProjectMaterialList.UnitType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./ProjectMaterialList" asp-route-id="@Model.ProjectId" asp-route-status="@Model.status" class="btn btn-primary">Back to List</a>
            </div>
        </form>
</div>
