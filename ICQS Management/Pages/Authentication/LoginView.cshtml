@model ICQS_Management.Pages.Authentication.LoginViewModel
@{
}
<form asp-controller="OnPostAsync" method="post" class="login-form">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <p>@TempData["ErrorMessage"]</p>
        </div>
    }
    <div class="form-group">
        <input asp-for="LoginDTO.email" class="form-control" type="text" name="email" placeholder="Email">
        <span class="input-group-addon"><i class="fa fa-envelope" aria-hi22222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222                                                                                                                                                                                                                                                                                                                                                                                                                                                                              dden="true"></i></span>
    </div>

    <div class="form-group">
        <input asp-for="LoginDTO.password" class="form-control" type="password" name="password" placeholder="Password">
        <span class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></span>
    </div>

    <div class="form-group">
        <button type="submit" value="Login" class="btn btn-primary btn-block">
            Login
        </button>
    </div>

    <div class="form-group">
        <a class="btn btn-link" asp-page="/Authentication/CustomerRegister">
            Create your Account <i class="fa fa-long-arrow-right ml-2" aria-hidden="true"></i>
        </a>
    </div>
</form>
