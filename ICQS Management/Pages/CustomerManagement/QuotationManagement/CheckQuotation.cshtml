@page
@model ICQS_Management.Pages.CustomerManagement.QuotationManagement.CheckQuotationModel

@{
    ViewData["Title"] = "CheckQuotation";
}

<h1>CheckQuotation</h1>

<h4>Quotation</h4>
<hr />
<div class="row">

    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Quotation.QuotationId" />
            <div class="form-group">
                <label asp-for="Quotation.RequestDate" class="control-label"></label>
                <input value="@Model.Quotation.RequestDate" class="form-control" />
                <span asp-validation-for="Quotation.RequestDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Project Name</label>
                <input value="@Model.Project.ProjectName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Quotation.CompletePrice" class="control-label"></label>
                <input value="@Model.Quotation.CompletePrice" class="form-control"/>
                <span asp-validation-for="Quotation.CompletePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" name="confirmBut" value="Confirm Quotation" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@Model.Quotation.QuotationId">Deny</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProjectMaterialList[0].MaterialName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProjectMaterialList[0].Quantity)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProjectMaterialList)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaterialName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
