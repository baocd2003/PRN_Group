@page
@model ICQS_Management.Pages.QuotationManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="wrapper">
    <h4 class="font-weight-bold">Creating new quotation</h4>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label fw-bold">Prototype</label>
                    @* <select asp-for="Quotation.ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select> *@
                    <input class="form-control" readonly value="@Html.DisplayFor(model => model.Project.ProjectName)" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="RequestDate" class="control-label fw-bold">Request Date</label>
                    <input asp-for="RequestDate" class="form-control" readonly value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")">
                    <span asp-validation-for="RequestDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="EstimatePrice" class="control-label fw-bold">Estimated Price</label>
                    <input asp-for="EstimatePrice" class="form-control" readonly placeholder="..." value=@Model.Project.TotalPrice/>
                    <span asp-validation-for="EstimatePrice" class="text-danger"></span>
                </div>
            </div>
        </div>

        @* Project + Project Materials Detail *@
        <div class="project_detail_wrapper">
            <div class="row">
                <div class="col-md4">

                </div>
            </div>
            <div class="d-flex justify-content-between mt-4 section_txt_wrapper">
                <div class="d-flex justify-content-start section_txt">
                    <img src="https://i.ibb.co/tbkC1zZ/blueprint.png" width="40" height="40" />
                    <h5 class="font-weight-bold">Project Detail</h5>
                </div>
            </div>
            <hr />
            <div class="row mb-5">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="ProjectName" class="control-label">Project Name</label>
                                <input asp-for="ProjectName" class="form-control" placeholder="Your project name.." />
                                <span asp-validation-for="ProjectName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="AreaPerFloor" class="control-label">Area/floor (m²)</label>
                                        <input asp-for="AreaPerFloor" class="form-control" value="@Model.Project.AreaPerFloor" />
                                        <span asp-validation-for="AreaPerFloor" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="NumOfFloors" class="control-label">Floors</label>
                                        <input asp-for="NumOfFloors" class="form-control" value="@Model.Project.NumOfFloors" />
                                        <span asp-validation-for="NumOfFloors" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                 <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" rows="5" class="form-control" placeholder="Project description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">

                </div>
                <div class="col-md-4">
                </div>
            </div>
            <div class="d-flex justify-content-between section_txt_wrapper">
                <div class="d-flex justify-content-start section_txt">
                    <img src="https://i.ibb.co/Snqfnc1/worker.png" width="40" height="40" />
                    <h5 class="font-weight-bold">Labor cost</h5>
                </div>
                <span>Estimated: <span class="font-weight-bold">$@(Model.Project.NumOfLabors * Model.Project.LaborSalaryPerMonth * Model.Project.MonthDuration)</span></span>
            </div>
            <hr/>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Project.NumOfLabors" class="control-label">Workers amount (people)</label>
                    <input asp-for="Project.NumOfLabors" class="form-control" value="@Model.Project.NumOfLabors" readonly/>
                </div>
                <div class="col-md-4">
                    <label asp-for="Project.LaborSalaryPerMonth" class="control-label">Worker salary/month ($)</label>
                    <input asp-for="Project.LaborSalaryPerMonth" class="form-control" value="@Model.Project.NumOfLabors" readonly />
                </div>
                <div class="col-md-4">
                    <label asp-for="Project.MonthDuration" class="control-label">Construction duration</label>
                    <input asp-for="Project.MonthDuration" class="form-control" value="@Model.Project.MonthDuration" readonly />
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4 section_txt_wrapper">
                <div class="d-flex justify-content-start section_txt">
                    <img src="https://i.ibb.co/XXXMhq4/brick.png" width="40" height="40" />
                    <h5 class="font-weight-bold">Materials</h5>
                </div>
                <span>Estimated: <span class="font-weight-bold" id="estimated_material_cost"></span></span>
            </div>
            <hr />
            <div class="row">
                @{int count = 0;}
                @foreach (var item in Model.ProjectMaterials)
                {
                    @* <input type="hidden" asp-for="NewProjectMaterials[count].Materials.MaterialId" value="@item.MaterialId" /> *@
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="NewProjectMaterials" class="control-label">@item.Materials.MaterialTypes.MaterialTypeName</label>
                            <div class="d-flex justify-content-between">
                                <select asp-for="NewProjectMaterials[count].MaterialId" class="form-control" onchange="updateEstimatedMaterialPrice()">
                                    @foreach (var material in Model.Materials.Where(m => m.MaterialTypeId == item.Materials.MaterialTypeId).Distinct())
                                    {
                                        <option value="@material.MaterialId">@material.Name</option>
                                    }
                                </select>
                                <input asp-for="NewProjectMaterials[count].Quantity" class="form-control" value="@item.Quantity" />
                            </div>
                            @* <span asp-validation-for="Project.Description" class="text-danger"></span> *@
                        </div>
                    </div>
                    count++;
                }
            </div>
            
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
<script>
    function updateEstimatedMaterialPrice() {
        var sum = 0;
        $(".materialPrices").each(function () {
            var price = parseFloat($(this).val());
            sum += price;
        });
        $("#estimated_material_cost").text(sum.toFixed(2));
    }
    $("select").on("change", function () {
        updateEstimatedMaterialPrice();
    });

    // Call the updateEstimatedMaterialPrice() function when the page is loaded
    updateEstimatedMaterialPrice();
</script>

