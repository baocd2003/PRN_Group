@page
@model ICQS_Management.Pages.ProjectManagement.CreateProjectMaterialModel

@{
    ViewData["Title"] = "CreateProjectMaterial";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>CreateProjectMaterial</h1>

<h4>ProjectMaterial</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.projectName" class="control-label">Project Name</label>
                <input asp-for="@Model.projectName" class="form-control" readonly />
            </div>
            <div class="form-group" hidden>
                <label asp-for="ProjectMaterial.ProjectId" class="control-label"></label>
                <input asp-for="ProjectMaterial.ProjectId" class ="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="ProjectMaterial.MaterialId" class="control-label"></label>
                <select asp-for="ProjectMaterial.MaterialId" class ="form-control" asp-items="ViewBag.MaterialId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProjectMaterial.Quantity" class="control-label"></label>
                <input asp-for="ProjectMaterial.Quantity" class="form-control" />
                <span asp-validation-for="ProjectMaterial.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@Model.IsAddMoreMaterial">
                    <label class="form-check-label" for="addMaterialCheckbox" asp-for="@Model.IsAddMoreMaterial">
                        I want to add more Material
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
