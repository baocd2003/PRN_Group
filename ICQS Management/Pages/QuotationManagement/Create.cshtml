        <label asp-for="Quotation.CustomerId" class="control-label"></label>
        <select asp-for="Quotation.CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
        </div>
        <div class="form-group">
        <label asp-for="Quotation.StaffID" class="control-label"></label>
        <select asp-for="Quotation.StaffID" class ="form-control" asp-items="ViewBag.StaffID"></select>
        </div> *@


        @*  <div class="form-group">
        <label asp-for="Quotation.Status" class="control-label"></label>
        <input asp-for="Quotation.Status" class="form-control" />
        <span asp-validation-for="Quotation.Status" class="text-danger"></span>
        </div> *@
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

