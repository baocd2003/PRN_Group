@page
@model ICQS_Management.Pages.StaffManagement.Account_Staff.QuotationRequestModel

@{
    ViewData["Title"] = "QuotationRequest";
    Layout = "../Shared/_StaffLayout";
}

<h1>QuotationRequest</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].EstimatePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].Project)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Quotation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Description)
            </td>
            <td>
                <a asp-page="./ApplyBatch" asp-route-id="@item.QuotationId">Aply</a> |
            </td>
        </tr>
}
    </tbody>
</table>
